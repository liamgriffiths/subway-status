{
  "name": "subway-statuses",
  "version": "1.0.0",
  "description": "i just wanted to use all the nice things",
  "repository": "git@github.com:liamgriffiths/subway-status.git",
  "scripts": {
    "test": "mocha --reporter spec --compilers js:babel/register test/*",
    "start": "babel-node server/server",
    "postinstall": "npm run build",
    "build-js": "browserify client/client.js | uglifyjs -c > static/bundle.js",
    "build-css": "lessc --compress css/main.less > static/bundle.css",
    "build": "mkdir -p static && echo build-js build-css | xargs -n1 -P4 npm run",
    "watch-js": "watchify client/client.js -o static/bundle.js -v",
    "watch-css": "catw -c 'lessc -' 'css/main.less' -o static/bundle.css -v",
    "watch": "mkdir -p static && echo watch-js watch-css | xargs -n1 -P4 npm run",
    "version-statics": "echo create asset-map",
    "upload-assets": "echo upload to cdn"
  },
  "keywords": [
    "mta",
    "subways",
    "g train",
    "es6",
    "es7",
    "react",
    "demo"
  ],
  "author": "liamgriffiths <liamgriffiths@gmail.com>",
  "license": "MIT",
  "browserify": {
    "verbose": true,
    "transform": [
      [
        "babelify"
      ]
    ]
  },
  "dependencies": {
    "babel": "5.5.4",
    "babelify": "6.1.2",
    "bluebird": "2.9.27",
    "browserify": "10.2.4",
    "catw": "^1.0.1",
    "envify": "3.4.0",
    "express": "4.12.4",
    "less": "^2.5.1",
    "react": "0.13.3",
    "superagent": "1.2.0",
    "uglify": "^0.1.5",
    "xml-parser": "1.2.1"
  },
  "devDependencies": {
    "mocha": "^2.2.5"
  }
}
